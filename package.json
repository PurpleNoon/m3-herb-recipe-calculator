{
  "name": "m3-herb-recipe-calculator",
  "version": "0.1.0",
  "author": "泪随樱花落/PurpleNoon",
  "scripts": {
    "reset": "del-cli node_modules",
    "dev": "modern dev",
    "build": "modern build",
    "start": "modern start",
    "new": "modern new",
    "lint": "modern lint",
    "test": "modern test"
  },
  "engines": {
    "node": ">=14.17.6"
  },
  "eslintConfig": {
    "extends": [
      "@modern-js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet",
      "git add"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "dependencies": {
    "@modern-js/plugin-bff": "^1.1.0",
    "@modern-js/plugin-express": "^1.1.1",
    "@modern-js/plugin-less": "^1.1.0",
    "@modern-js/runtime": "^1.0.0",
    "@shlappas/itertools": "^2.1.1",
    "antd": "^4.17.1",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "mitt": "^3.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@modern-js/app-tools": "^1.0.0",
    "@modern-js/plugin-jarvis": "^1.0.0",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.177",
    "@types/node": "^14",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "del-cli": "^4.0.1",
    "typescript": "^4",
    "@modern-js/plugin-testing": "^1.1.1",
    "@types/jest": "^26.0.9"
  },
  "modernConfig": {
    "runtime": {
      "router": true,
      "state": true
    }
  }
}
